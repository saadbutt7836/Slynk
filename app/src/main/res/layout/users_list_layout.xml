<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liveSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_focusable_straight"
    android:clickable="true"
    android:elevation="5dp"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:longClickable="true"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_SearchProfile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_stroke_profile_layout"
        android:padding="1.3dp" />

    <TextView
        android:id="@+id/textView_FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imageView_SearchProfile"
        android:fontFamily="@string/app_font"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView_SearchUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_FullName"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageView_SearchProfile"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/imageView_SearchProfile"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorLightGrey">

    </LinearLayout>
</RelativeLayout>