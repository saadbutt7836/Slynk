<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LikedPeopleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/straight_border_stroke_background"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/LikeBackArrow"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/clickable_focusable_circle"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:padding="2dp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/colorTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/app_font"
            android:paddingLeft="6dp"
            android:text="Liked People"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/LikesRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>