<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pronuxtech.slynk">
    <!-- PERMISSIONS START -->
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- INTERNET PERMISSION -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- CAMERA PERMISSION -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- WRITE EXTERNAL STORAGE PERMISSION -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- READ EXTERNAL STORAGE PERMISSION -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Slynk"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CreateGroupActivity"></activity>
        <activity
            android:name=".MessageVideoView"
            android:theme="@style/AppDialogTheme" />
        <activity android:name=".AllChatUserListActivity" />
        <activity android:name=".RespondActivity" />
        <activity android:name=".MyFriendsActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".AccountViewProfileActivity" />
        <activity android:name=".LikedPeopleActivity" />
        <activity android:name=".UserSearchProfileActivity" />
        <activity android:name=".PostCommentsActivity" />
        <activity android:name=".ConversationUsersListActivity" />
        <activity android:name=".Signup_part_3_activity" />
        <activity android:name=".Signup_part_2_activity" />
        <activity android:name=".ChatRoomActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AuthenticationActivity" />
        <activity android:name=".HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>