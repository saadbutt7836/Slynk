<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20.0dip">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:layout_marginTop="30dip"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:fontFamily="@string/app_font"
                        android:text="EMAIL"
                        android:textColor="@color/colorTitle"
                        android:textSize="13.0dip"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_SignInEmail"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="2.0dip"
                        android:drawableStart="@drawable/user_icon"
                        android:drawableTint="@color/colorTitle"
                        android:background="@drawable/round_corner_background"
                        android:backgroundTint="@color/colorFieldBack"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="7dip" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80.0dip"
                    android:layout_marginTop="20dip"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2.0dip"
                        android:fontFamily="@string/app_font"
                        android:text="PASSWORD"

                        android:textColor="@color/colorTitle"
                        android:textSize="13.0dip"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_SignInPassword"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="2.0dip"
                        android:background="@drawable/round_corner_background"
                        android:backgroundTint="@color/colorFieldBack"
                        android:drawableTint="@color/colorTitle"
                        android:drawableStart="@drawable/password"
                        android:inputType="textPassword"
                        android:paddingLeft="7dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView_ForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/clickable_focusable_straight"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@string/app_font"
                    android:text="forgotten password"
                    android:textColor="@color/colorTitle"
                    android:textSize="17dp"
                    android:textStyle="italic|bold" />

                <Button
                    android:id="@+id/Btn_SignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_corner_background"
                    android:backgroundTint="@color/colorPink"
                    android:fontFamily="@string/app_font"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>